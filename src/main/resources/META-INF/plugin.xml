<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.vol0n.utbotcppclion</id>
    <name>UTBotCppClion</name>
    <vendor>vol0n</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.clion.ide</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.cidr.lang</depends>
    <depends>com.intellij.modules.clion</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.vol0n.utbotcppclion.services.GeneratorSettings"/>
        <projectService serviceImplementation="com.github.vol0n.utbotcppclion.services.ProjectSettings"/>
        <projectConfigurable parentId="tools" instance="com.github.vol0n.utbotcppclion.services.ProjectConfigurable"
                             id="com.github.vol0n.utbotcppclion.services.ProjectConfigurable"
                             displayName="UT BOT: Project Settings for Generating Tests"
                             nonDefaultProject="true"/>
    </extensions>


    <actions>
        <group id="com.github.vol0n.utbotcppclion.actions.UTBot" text="Static Grouped Actions" popup="true" >
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="com.github.vol0n.utbotcppclion.actions.GenerateForLineAction"
                    class="com.github.vol0n.utbotcppclion.actions.GenerateForLineAction" text="UT Bot: Generate for Line"
                    description="Generate tests for line uder carret">
            </action>
            <action id="com.github.vol0n.utbotcppclion.actions.GenerateForPredicateAction"
                    class="com.github.vol0n.utbotcppclion.actions.GenerateForPredicateAction"
                    text="UT Bot: Generate tests for predicate on this call"
                    description="Generate tests for given predicate on call">
            </action>
        </group>
        <action id="com.github.vol0n.utbotcppclion.actions.GenerateForFileAction"
                class="com.github.vol0n.utbotcppclion.actions.GenerateForFileAction" text="UTBot: Generate Tests for File"
                description="Generates tests for file via grpc server">
            <add-to-group group-id="ProjectViewPopupMenuModifyGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
